    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug indexer_api",
            "cargo": {
                "args": ["build", "--bin=indexer_api"],
                "filter": {
                    "kind": "bin"
                }
            },
            "terminal": "console",
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug indexer tests",
            "cargo": {
                "args": ["test", "--no-run", "--bin=indexer"],
                "filter": {
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
